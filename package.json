{
  "name": "@xpaysh/n8n-nodes-xpay",
  "version": "0.2.0",
  "description": "AI agent marketplace and pay-per-run workflows with xpay✦. Discover glyphs, set spending policies, and execute with automatic payments.",
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "payments",
    "usdc",
    "base",
    "paywall",
    "monetization",
    "pay-to-run",
    "xpay",
    "ai-agents",
    "glyphrun",
    "a2a",
    "smart-proxy"
  ],
  "license": "MIT",
  "author": {
    "name": "xpay✦ Team",
    "email": "xpaysh@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xpaysh/n8n-nodes-xpay.git"
  },
  "bugs": {
    "url": "https://github.com/xpaysh/n8n-nodes-xpay/issues"
  },
  "homepage": "https://xpay.sh",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run copy-icons",
    "copy-icons": "cp nodes/XPayTrigger/xpay.svg dist/nodes/XPayTrigger/ && cp nodes/XPayDiscover/xpay-discover.svg dist/nodes/XPayDiscover/ && cp nodes/XPayRun/xpay-run.svg dist/nodes/XPayRun/ && cp nodes/XPayPolicy/xpay-policy.svg dist/nodes/XPayPolicy/",
    "lint": "eslint nodes credentials shared --ext .ts",
    "lint:fix": "eslint nodes credentials shared --ext .ts --fix",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/XPayApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/XPayTrigger/XPayTrigger.node.js",
      "dist/nodes/XPayDiscover/XPayDiscover.node.js",
      "dist/nodes/XPayRun/XPayRun.node.js",
      "dist/nodes/XPayPolicy/XPayPolicy.node.js"
    ]
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "n8n-workflow": "^1.70.0",
    "typescript": "^5.7.0"
  },
  "peerDependencies": {
    "n8n-workflow": ">=1.70.0"
  }
}
